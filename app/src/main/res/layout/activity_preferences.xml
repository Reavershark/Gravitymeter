<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PreferencesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_display_raw_data"
        android:id="@+id/settingsTextViewRawData"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="21sp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/settingsCheckBoxDisplayRawData"
        android:layout_alignBottom="@+id/settingsTextViewRawData"
        android:layout_toRightOf="@+id/settingsTextViewRawData"
        android:layout_toEndOf="@+id/settingsTextViewRawData"
        android:layout_marginLeft="6dp"
        android:checked="false" />


</RelativeLayout>
